@for (int y = 1; y < 9; y++)
{
    for (int x = 1; x < 9; x++)
    {
        foreach (var square in ViewBag.WhiteSquares)
        {
            if (square.Coordinate.X == x && square.Coordinate.Y == y)
            {

                if (square.Piece == null)
                {
                    <img onclick="window.location.href='@Url.Action("Click","Home",new { X1=x,Y1=y,Color=square.Color})'" height="75" width="75" style="position:relative; background-color:white" />
                }
                else
                {
                    <img onclick="window.location.href='@Url.Action("Click","Home",new { X1=x,Y1=y,Color=square.Color})'" src="@square.Piece.ImageURL" height="75" width="75" style="position:relative; background-color:white" />

                }
            }
        }
        foreach (var square in ViewBag.BlackSquares)
        {
            if (square.Coordinate.X == x && square.Coordinate.Y == y)
            {
                if (square.Piece == null)
                {
                    <img onclick="window.location.href='@Url.Action("Click","Home",new { X1=x,Y1=y,Color=square.Color})'" height="75" width="75" style="position:relative; background-color:black" />
                }
                else
                {
                    <img onclick="window.location.href='@Url.Action("Click","Home",new { X1=x,Y1=y,Color=square.Color})'" src="@square.Piece.ImageURL" height="75" width="75" style="position:relative; background-color:black" />

                }
            }
        }
    }
    <br />
}


